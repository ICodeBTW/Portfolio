---
import type { Link } from "../../components/UI/CustomLink.astro";
import CustomLink from "../../components/UI/CustomLink.astro";
import Section from "../Section.astro";

type ContactValue = {
  content: string;
  links: Array<Link>;
};

const defaultValues = {
  content:
    "I'm always interested in discussing new opportunities, interesting problems,\
  or just connecting with fellow engineers.",
  links: [
    {
      content: "Send Email",
      href: "mailto:shree@shreenidhi.dev",
      target: "_blank",
      classes:
        "bg-gray-900 text-white px-8 py-3 rounded-full hover:bg-gray-800 transition-colors text-sm font-medium text-center",
    },
    {
      content: "LinkedIn",
      href: "https://www.linkedin.com/in/shreenidhi-bharadwaj-hk-9618b41b5/",
      target: "_blank",
      classes:
        "border border-gray-300 text-gray-700 px-8 py-3 rounded-full hover:border-gray-400 hover:text-gray-900 transition-colors text-sm font-medium text-center",
    },
  ],
};

const { contact = defaultValues } = Astro.props;
---

<Section title="Get In Touch" id="contact">
  <p class="text-xl text-gray-600 leading-relaxed mb-8 font-light">
    {contact.content}
  </p>
  <div class="flex flex-col sm:flex-row gap-4">
    {contact.links.map((link: Link) => <CustomLink link={link} />)}
  </div>
</Section>
